{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/header.css') }}">
{% endblock %}

{% block body %}
        <div class="row g-4">
            <!-- Carousel Section (Côté gauche) -->
            <div class="col-lg-12">
                <div id="myCarousel" class="carousel slide carousel-container" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        {% if headers|length > 1 %}
                            {% for key,header in headers %}
                                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="{{ key }}"
                                        {% if key == 0 %}class="active" aria-current="true"{% endif %}
                                        aria-label="Slide {{ key + 1 }}"></button>
                            {% endfor %}
                        {% endif %}
                    </div>
                    <div class="carousel-inner rounded-4 overflow-hidden">
                        {% for key,header in headers %}
                            <div class="carousel-item {% if key == 0 %}active{% endif %}">
                                <div class="carousel-image-container">
                                    <img src="/uploads/header/{{ header.picture }}"
                                         class="w-100 object-fit-cover"
                                         alt="{{ header.title }}">
                                </div>
                                <div class="carousel-caption text-start p-4 bg-light bg-opacity-50 rounded-3">
                                    <p class="opacity-75">{{ header.content }}</p>
                                    <p><a class="btn btn-lg btn-tertiary rounded-pill"
                                          href="{{ header.buttonLink }}">{{ header.buttonTitle }}</a></p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {% if headers|length > 1 %}
                        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    {% endif %}
                </div>
            </div>

            <!-- Recommended Products Section (Côté droit) -->
            <div class="col-lg-4">
                <h4 class="mb-4">RECOMMENDED FOR YOU</h4>
                <div class="row row-cols-2 g-3">
                    {% for product in productsInHomepage %}
                        <div class="col">
                            <a href="#" class="text-decoration-none product-card-link text-dark">
                                <div class="card h-100 d-flex flex-column border-0 rounded-4 product-card">
                                    <!-- Image -->
                                    <div class="product-image-container">
                                        <img src="{{ asset('uploads/products/' ~ product.picture) }}"
                                             class="w-100 h-100 object-fit-cover"
                                             alt="{{ product.name }}">
                                    </div>

                                    <!-- Info -->
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <!-- Title -->
                                        <h5 class="card-title text-center mb-3 product-title">{{ product.name }}</h5>

                                        <!-- Icons -->
                                        <div class="d-flex justify-content-center gap-3 mb-3 platform-icons">
                                            {% if product.subCategory and product.subCategory.icon %}
                                                <span class="platform-icon d-flex align-items-center justify-content-center">
                                        <img src="{{ asset('uploads/category/icon/' ~ product.subCategory.icon ) }}"
                                             alt="{{ product.subCategory.name }}">
                                    </span>
                                            {% endif %}
                                            <span class="platform-icon d-flex align-items-center justify-content-center">
                                    <i class="bi bi-globe"></i>
                                </span>
                                        </div>

                                        <!-- Price -->
                                        <div class="text-white text-center fw-bold fs-4 rounded-3 p-2 price-tag mt-auto">
                                            €{{ product.price }}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>


            <!-- Category Section -->
            <div class="bg-dark-subtle-cat py-5 rounded-5 shadow">
                <div class="container">
                    <!-- Filter Navigation -->
                    <div class="category-filters mb-5">
                        <ul class="nav nav-pills gap-3 d-flex justify-content-center">
                            {% for parentCategory in categories %}
                                <li class="nav-item">
                                    <button class="nav-button rounded-pill px-4 py-2 {% if loop.first %}active{% endif %}"
                                            id="filter-{{ parentCategory.id }}"
                                            data-bs-toggle="pill"
                                            data-bs-target="#content-{{ parentCategory.id }}">
                                        {% if parentCategory.icon %}
                                            <img src="{{ asset('uploads/category/icon/' ~ parentCategory.icon) }}"
                                                 class="filter-icon me-2"
                                                 alt="">
                                        {% endif %}
                                        {{ parentCategory.name }}
                                    </button>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <!-- Category Grid -->
                    <div class="tab-content" id="categoryContent">
                        {% for parentCategory in categories %}
                            <div class="tab-pane fade {% if loop.first %}show active{% endif %}"
                                 id="content-{{ parentCategory.id }}"
                                 data-controller="category"
                                 data-category-current-page-value="1"
                                 data-category-total-pages-value="{{ (parentCategory.children|length / 6)|round(0, 'ceil') }}">

                                <!-- Grid Container -->
                                <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-4" data-category-target="grid">
                                    {% for subCategory in parentCategory.children|slice(0, 6) %}
                                        <div class="col">
                                            <a href="#" class="text-decoration-none category-link">
                                                <div class="category-card-home rounded-4">
                                                    <div class="p-4 text-center d-flex flex-column align-items-center justify-content-center h-100">
                                                        <div class="icon-wrapper d-flex align-items-center justify-content-center">
                                                            {% if subCategory.icon %}
                                                                <img src="{{ asset('uploads/category/icon/' ~ subCategory.icon) }}"
                                                                     alt="{{ subCategory.name }}"
                                                                     class="category-icon">
                                                            {% endif %}
                                                        </div>
                                                        <p class="category-title mb-0">{{ subCategory.name }}</p>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>

                                <!-- View More Button -->
                                {% if parentCategory.children|length > 6 %}
                                    <div class="text-center mt-5">
                                        <button class="btn-view-more"
                                                data-category-target="viewMoreButton"
                                                data-category-id="{{ parentCategory.id }}"
                                                data-action="category#loadMore">
                                            <span>View More</span>
                                            <svg class="ms-2" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                            </svg>
                                        </button>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
