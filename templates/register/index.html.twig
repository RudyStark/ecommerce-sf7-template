{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg border-0 my-5 bg-dark-block" style="max-width: 600px; width: 100%; border-radius: 15px; overflow: hidden;">

            <!-- Image Block -->
            <div class="card-header bg-transparent p-0" style="height: 200px; overflow: hidden;">
                <img src="{{ asset('build/images/signup.jpeg') }}" alt="Register Image" class="img-fluid w-100 h-100" style="object-fit: cover;">
            </div>

            <!-- Registration Form -->
            <div class="card-body p-4">
                <h2 class="text-center mb-4 text-light">Create Your Account</h2>

                {{ form_start(registerForm, { 'attr': { 'class': 'needs-validation' } }) }}

                <!-- Firstname and Lastname inputs -->
                <div class="row mb-3">
                    <!-- Firstname input -->
                    <div class="col-md-6 mb-3 mb-md-0">
                        <div class="gaming-input-wrapper">
                            {{ form_widget(registerForm.firstname, {
                                'attr': {
                                    'class': 'gaming-input text-light',
                                    'placeholder': 'First Name',
                                    'autocomplete': 'given-name'
                                }
                            }) }}
                        </div>
                    </div>

                    <!-- Lastname input -->
                    <div class="col-md-6">
                        <div class="gaming-input-wrapper">
                            {{ form_widget(registerForm.lastname, {
                                'attr': {
                                    'class': 'gaming-input text-light',
                                    'placeholder': 'Last Name',
                                    'autocomplete': 'family-name'
                                }
                            }) }}
                        </div>
                    </div>
                </div>

                <!-- Email input -->
                <div class="mb-3">
                    <div class="gaming-input-wrapper">
                        {{ form_widget(registerForm.email, {
                            'attr': {
                                'class': 'gaming-input text-light',
                                'placeholder': 'Email address',
                                'autocomplete': 'email'
                            }
                        }) }}
                    </div>
                </div>

                <!-- Password inputs -->
                <div class="mb-3">
                    <div class="gaming-input-wrapper">
                        {{ form_widget(registerForm.plainPassword.first, {
                            'attr': {
                                'class': 'gaming-input text-light',
                                'placeholder': 'Password',
                                'autocomplete': 'new-password'
                            }
                        }) }}
                    </div>
                </div>

                <div class="mb-4">
                    <div class="gaming-input-wrapper">
                        {{ form_widget(registerForm.plainPassword.second, {
                            'attr': {
                                'class': 'gaming-input text-light',
                                'placeholder': 'Confirm Password',
                                'autocomplete': 'new-password'
                            }
                        }) }}
                    </div>
                </div>

                <!-- CSRF Token -->
                {{ form_widget(registerForm._token) }}

                <!-- Sign Up Button -->
                <div class="text-center mt-5">
                    <button class="btn-view-more" type="submit" style="font-size: 0.8rem;">
                        <span>Create Account</span>
                        <svg class="ms-2" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                </div>

                <!-- Already have an account link -->
                <div class="text-center mt-4">
                    <a href="{{ path('app_login') }}" class="gaming-link">
                        <i class="bi bi-person-check me-2"></i>Already have an account? Sign in!
                    </a>
                </div>

                {{ form_end(registerForm) }}
            </div>
        </div>
    </div>
{% endblock %}
