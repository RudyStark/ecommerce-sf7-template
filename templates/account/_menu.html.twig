{# account/_menu.html.twig #}
<nav id="account-nav" class="navbar navbar-expand-md gaming-navbar mb-4">
    <button class="navbar-toggler gaming-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#accountMenu" aria-controls="accountMenu" aria-expanded="false" aria-label="Toggle navigation">
        <i class="bi bi-controller"></i>
    </button>

    <div class="collapse navbar-collapse justify-content-center" id="accountMenu">
        <ul class="navbar-nav align-items-center gap-2">
            <li class="nav-item">
                <a class="gaming-nav-link {{ app.request.get('_route') == 'app_account' ? 'active' : '' }}" href="{{ path('app_account') }}">
                    <i class="bi bi-person-badge"></i>
                    <span class="nav-text">Player Profile</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="gaming-nav-link {{ app.request.get('_route') == 'app_account_library' ? 'active' : '' }}" href="">
                    <i class="bi bi-collection-play"></i>
                    <span class="nav-text">Game Library</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="gaming-nav-link {{ app.request.get('_route') == 'app_account_orders' ? 'active' : '' }}" href="">
                    <i class="bi bi-bag-check"></i>
                    <span class="nav-text">Purchase History</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="gaming-nav-link {{ app.request.get('_route') == 'app_account_wishlist' ? 'active' : '' }}" href="{{ path('app_account_wishlist') }}">
                    <i class="bi bi-bookmark-star"></i>
                    <span class="nav-text">Wishlist</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="gaming-nav-link {{ app.request.get('_route') == 'app_account_settings' ? 'active' : '' }}" href="">
                    <i class="bi bi-sliders"></i>
                    <span class="nav-text">Settings</span>
                </a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="gaming-nav-link admin" href="{{ path('admin') }}">
                        <i class="bi bi-shield-lock"></i>
                        <span class="nav-text">Admin</span>
                    </a>
                </li>
            {% endif %}
            <li class="nav-item">
                <a class="gaming-nav-link logout" href="{{ path('app_logout') }}">
                    <i class="bi bi-power"></i>
                    <span class="nav-text">Log Out</span>
                </a>
            </li>
        </ul>
    </div>
</nav>
