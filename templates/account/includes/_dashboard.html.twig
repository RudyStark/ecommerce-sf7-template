<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">My Last Orders</h5>
            </div>
            <div class="card-body">
                {% if orders|length == 0 %}
                    <p class="text-muted text-center">You have no orders yet.</p>
                {% else %}
                    <ul class="list-group shadow-sm rounded">
                        {% for order in orders|slice(0, 5) %}
                            <a href="{{ path('app_account_order', { id_order: order.id }) }}" class="text-decoration-none list-group-item list-group-item-action px-4 py-4 position-relative border-bottom">
                                <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center">

                                    <!-- Order ID and Date -->
                                    <div class="order-info mb-3 mb-sm-0 text-secondary">
                                        <h6 class="fw-bold text-primary mb-1">Order #{{ order.id }}</h6>
                                        <small class="text-muted">Placed on: {{ order.createdAt|date("F j, Y") }}</small>
                                    </div>

                                    <!-- State Badge -->
                                    <div class="order-state text-end text-sm-start mb-3 mb-sm-0">
                                        {{ include('account/order/includes/_state.html.twig', { field: { value: order.state } }) }}
                                    </div>

                                    <!-- VAT and Total Price -->
                                    <div class="order-price text-end text-sm-start">
                                        <span class="d-block text-secondary">Total <small>(incl. VAT)</small>:</span>
                                        <strong class="text-dark">{{ order.totalWt|price }}</strong>
                                    </div>
                                </div>

                                <!-- Decorative Accent Line -->
                                <span class="position-absolute bottom-0 start-0 end-0 bg-dark-subtle" style="height: 2px;"></span>
                            </a>
                        {% endfor %}
                    </ul>
                {% endif %}
                <div class="d-flex justify-content-center mt-3">
                    <a href="#" class="btn btn-outline-secondary btn-sm">View all orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
