{% if field.value == '1' %}
    <span class="badge bg-secondary rounded-pill">Waiting for payment</span>
{% elseif field.value == '2' %}
    <span class="badge bg-success rounded-pill">Paid</span>
{% elseif field.value == '3' %}
    <span class="badge bg-warning rounded-pill">Processing</span>
{% elseif field.value == '4' %}
    <span class="badge bg-primary rounded-pill">Shipped</span>
{% elseif field.value == '5' %}
    <span class="badge bg-success-subtle rounded-pill">Delivered</span>
{% else %}
    <span class="badge bg-danger rounded-pill">Cancelled</span>
{% endif %}
