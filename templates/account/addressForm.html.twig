{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">My Personal Information</h1>

        <div class="row">
            <!-- Menu de gauche -->
            <div class="col-md-3">
                {% include '/account/_menu.html.twig' %}
            </div>

            <!-- Contenu principal -->
            <div class="col-md-9">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">New Address</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(addressForm) }}

                        <!-- Section Category -->
                        <div class="mb-4 p-3 rounded bg-light">
                            <h5 class="mb-3 text-primary"><i class="bi bi-tag-fill me-2"></i>Category</h5>
                            <div class="mb-3 form-field">
                                {{ form_label(addressForm.title, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(addressForm.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(addressForm.title) }}
                            </div>
                        </div>

                        <!-- Section Identity -->
                        <div class="mb-4 p-3 rounded bg-light">
                            <h5 class="mb-3 text-success"><i class="bi bi-person-fill me-2"></i>Identity</h5>
                            <div class="row g-3">
                                <div class="col-md-6 form-field">
                                    {{ form_label(addressForm.firstname, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(addressForm.firstname, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(addressForm.firstname) }}
                                </div>
                                <div class="col-md-6 form-field">
                                    {{ form_label(addressForm.lastname, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(addressForm.lastname, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(addressForm.lastname) }}
                                </div>
                            </div>
                        </div>

                        <!-- Section Address -->
                        <div class="mb-4 p-3 rounded bg-light">
                            <h5 class="mb-3 text-danger"><i class="bi bi-geo-alt-fill me-2"></i>Address</h5>
                            <div class="mb-3 form-section">
                                {{ form_label(addressForm.address, 'Address', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(addressForm.address, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(addressForm.address) }}
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6 form-field">
                                    {{ form_label(addressForm.city, 'City', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(addressForm.city, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(addressForm.city) }}
                                </div>
                                <div class="col-md-6 form-field">
                                    {{ form_label(addressForm.postal, 'Postal Code', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(addressForm.postal, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(addressForm.postal) }}
                                </div>
                            </div>
                            <div class="mb-3 form-field">
                                {{ form_label(addressForm.country, 'Country', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(addressForm.country, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(addressForm.country) }}
                            </div>
                        </div>

                        <!-- Section Contact -->
                        <div class="mb-4 p-3 rounded bg-light">
                            <h5 class="mb-3 text-warning"><i class="bi bi-telephone-fill me-2"></i>Contact</h5>
                            <div class="mb-3 form-field">
                                {{ form_label(addressForm.phone, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(addressForm.phone, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(addressForm.phone) }}
                            </div>
                        </div>

                        {{ form_end(addressForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
