{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg border-0 my-5 bg-dark-block" style="max-width: 600px; width: 100%; border-radius: 15px; overflow: hidden;">

            <!-- Image Block -->
            <div class="card-header bg-transparent p-0" style="height: 200px; overflow: hidden;">
                <img src="{{ asset('build/images/forgot-password.jpeg') }}" alt="Reset Password Image" class="img-fluid w-100 h-100" style="object-fit: cover;">
            </div>

            <!-- Reset Password Form -->
            <div class="card-body p-4">
                <h2 class="text-center mb-4 text-light">Create New Password</h2>

                {{ form_start(resetPasswordForm) }}
                <!-- New Password input -->
                <div class="mb-3">
                    <div class="gaming-input-wrapper">
                        {{ form_widget(resetPasswordForm.plainPassword.first, {
                            'attr': {
                                'class': 'gaming-input text-light',
                                'placeholder': 'New Password',
                                'autocomplete': 'new-password'
                            }
                        }) }}
                    </div>
                </div>

                <!-- Confirm Password input -->
                <div class="mb-4">
                    <div class="gaming-input-wrapper">
                        {{ form_widget(resetPasswordForm.plainPassword.second, {
                            'attr': {
                                'class': 'gaming-input text-light',
                                'placeholder': 'Confirm New Password',
                                'autocomplete': 'new-password'
                            }
                        }) }}
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-5">
                    <button class="btn-view-more" type="submit" style="font-size: 0.8rem;">
                        <span>Update Password</span>
                        <svg class="ms-2" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                </div>
                {{ form_end(resetPasswordForm) }}

            </div>
        </div>
    </div>
{% endblock %}
