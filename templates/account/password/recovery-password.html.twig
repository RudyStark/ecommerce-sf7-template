{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg border-0 bg-dark-block" style="max-width: 600px; width: 100%; border-radius: 15px; overflow: hidden;">

            <!-- Image Block -->
            <div class="card-header bg-transparent p-0" style="height: 200px; overflow: hidden;">
                <img src="{{ asset('build/images/forgot-password.jpeg') }}" alt="Reset Password Image" class="img-fluid w-100 h-100" style="object-fit: cover;">
            </div>

            <!-- Reset Password Form -->
            <div class="card-body p-4">
                <h2 class="text-center mb-4 text-light">Reset your password</h2>

                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(recoveryPasswordForm) }}
                <div class="mb-4 position-relative">
                    <div class="gaming-input-wrapper">
                        {{ form_widget(recoveryPasswordForm.email, {
                            'attr': {
                                'class': 'gaming-input text-light',
                                'placeholder': 'Enter your email address'
                            }
                        }) }}
                    </div>
                    {{ form_errors(recoveryPasswordForm.email) }}
                </div>

                <div class="text-light mb-4" style="font-size: 0.9rem;">
                    <i class="bi bi-info-circle me-2"></i>
                    Enter your email address, and we will send you a link to reset your password.
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn-view-more" style="font-size: 0.8rem;">
                        <span>Send Reset Link</span>
                        <svg class="ms-2" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                </div>

                <!-- Back to login link -->
                <div class="text-center mt-4">
                    <a href="{{ path('app_login') }}" class="gaming-link">
                        <i class="bi bi-arrow-left me-2"></i>Back to login
                    </a>
                </div>
                {{ form_end(recoveryPasswordForm) }}
            </div>
        </div>
    </div>
{% endblock %}
