<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">My Wishlist</h5>
                {% if app.user.wishlists|length < 0 %}
                    <a href="" class="btn btn-sm btn-light text-danger">
                        Clear Wishlist
                    </a>
                {% endif %}
            </div>
            <div class="card-body">
                {% if app.user.wishlists|length > 0 %}
                    <div class="row g-4">
                        {% for product in app.user.wishlists %}
                            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                <div class="card h-100 border-light shadow-sm">
                                    <a href="{{ path('app_product', { slug: product.slug }) }}" class="text-decoration-none text-dark">
                                        <img class="card-img-top rounded" src="/uploads/products/{{ product.picture }}" alt="{{ product.name }}" style="height: 220px; object-fit: cover;">
                                    </a>
                                    <div class="card-body d-flex flex-column">
                                        <h6 class="card-title text-truncate">{{ product.name }}</h6>
                                        <p class="card-text mt-auto">
                                            <strong>{{ product.pricewt|price }}</strong>
                                        </p>
                                    </div>
                                    <div class="card-footer bg-white border-0 d-flex justify-content-center align-items-center">
                                        <a href="{{ path('app_account_wishlist_remove', { id : product.id }) }}" class="btn btn-sm btn-outline-danger">
                                            Remove
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-center">No products in your wishlist.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
