{% if field.value == 1 %}
    <span class="badge bg-secondary text-light">Waiting for Payment</span>
{% elseif field.value == 2 %}
    <span class="badge bg-success text-light">Paid</span>
{% elseif field.value == 3 %}
    <span class="badge bg-warning text-dark">Processing</span>
{% elseif field.value == 4 %}
    <span class="badge bg-primary text-light">Shipped</span>
{% elseif field.value == 5 %}
    <span class="badge bg-success-subtle text-dark">Delivered</span>
{% else %}
    <span class="badge bg-danger text-light">Cancelled</span>
{% endif %}
