<!doctype html>
<html lang="fr" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ecommerce SF7 Template - V1</title>
    <meta name="description" content="Ecommerce SF7 Template - V1">
    <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/custom.css') }}" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <script src="https://unpkg.com/feather-icons"></script>
    {% endblock %}
    <script defer src="https://ga.jspm.io/npm:es-module-shims@1.5.5/dist/es-module-shims.js"></script>
    {{ importmap() }}
</head>
<body>
{% include 'partials/_header_nav.html.twig' %}
{% include 'partials/_search_offcanvas.html.twig' %}

<div id="toasts" class="position-fixed bottom-0 end-0 p-3" style="z-index: 11; width: 100%; max-width: 400px;">
    <div id="liveToast">
        <!-- Les toasts apparaissent ici -->
    </div>
</div>

<main>
    <!-- Flash messages -->
    <div class="container">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert mt-4 alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {% block body %}

    {% endblock %}

    <!-- FOOTER -->
    <footer class="container">
        <p>&copy; 2024 Ecommerce SF7 - Template - V1 <a href="#">CGV</a> &middot; <a href="#">CGU</a></p>
    </footer>
</main>

{% block javascripts %}
    <!-- Vos scripts JavaScript -->
    <!-- Script principal avec type="module" pour utiliser les imports ES -->
    <script type="module" src="{{ asset('app.js') }}"></script>

    <!-- Autres scripts JavaScript -->
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" defer></script>
    <script src="{{ asset('assets/js/global.js') }}"></script>

    <!-- IcÃ´nes Feather -->
    <script src="https://unpkg.com/feather-icons"></script>
{% endblock %}
</body>
</html>
