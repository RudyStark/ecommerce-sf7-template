<!doctype html>
<html lang="fr" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ecommerce SF7 Template - V1</title>
    <meta name="description" content="Ecommerce SF7 Template - V1">
    <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('build/css/notification.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/style.css') }}">
        <!-- Custom styles for this template -->
        <link href="{{ asset('build/css/carousel.css') }}" rel="stylesheet">
        <link href="{{ asset('build/css/custom.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('build/css/NavBar.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/footer.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <script src="https://unpkg.com/feather-icons"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    {% endblock %}
    {% block javascript %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="bg-dark-subtle">
<header>
    {% include 'partials/_header_nav.html.twig' %}
    {% include 'partials/_search_offcanvas.html.twig' %}
</header>

<main>
    {# Notification Message #}
    {% include 'partials/_gaming_notification_msg.html.twig' %}

    <section class="container my-3">
        {% block body %}{% endblock %}
    </section>

    <!-- FOOTER -->
    <footer class="shadow">
        {{ include('partials/_footer.html.twig') }}
    </footer>
</main>

{% block javascripts %}
    <script src="{{ asset('build/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('build/js/global.js') }}"></script>
    <script>
        document.querySelectorAll('.gaming-notification').forEach(notification => {
            // Supprime la notification aprÃ¨s 3.3 secondes (3s + 0.3s d'animation)
            setTimeout(() => {
                notification.remove();
            }, 3300);
        });
    </script>
{% endblock %}
</body>
</html>
