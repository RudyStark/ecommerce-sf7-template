{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        {% if cart|length == 0 %}
            <div class="alert alert-info" role="alert">
                Your cart is empty!
            </div>
        {% else %}
            <div class="row d-flex align-items-stretch">
                <!-- Colonne principale -->
                <div class="col-lg-8 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-light">
                            <span class="text-dark">My Order</span>
                        </h4>
                        <div class="d-flex align-items-center">
                            <!-- Retour à la boutique -->
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary d-inline-flex align-items-center small-text-mobile">
                                <i class="bi bi-arrow-left me-1"></i>
                                Back to shopping
                            </a>
                        </div>
                    </div>

                    <form action="#" method="post">
                        <!-- Delivery address -->
                        <div class="card shadow mb-3">
                            <div class="card-header">
                                <h5 class="fw-bold">Shipping Address</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-3" data-controller="form-guest-address">
                                    {{ form_start(deliveryForm) }} <!-- Start the form -->

                                    {% if app.user %}
                                        <!-- Show the addresses from the user connected -->
                                        {{ form_row(deliveryForm.addresses) }} <!-- Render the addresses -->
                                        <a href="{{ path('app_account_address_form') }}" class="small-text-mobile btn btn-secondary">add a new address</a>
                                    {% else %}
                                        <!-- If the user is not logged in, show the guest form -->
                                        <a href="{{ path('app_login') }}" class="btn btn-outline-dark btn-sm mt-2">Sign in</a>
                                        <a href="#" class="btn btn-outline-dark btn-sm mt-2" data-action="form-guest-address#toggleForm">Continue as a guest</a>

                                        <-- Hidden guest form -->
                                        <div id="guestForm" class="mt-3 d-none">
                                            <div class="form-group mb-2">
                                                <label for="guest_name" class="form-label">Full Name</label>
                                                <input type="text" id="guest_name" name="guest_name" class="form-control form-control-sm" placeholder="John Doe">
                                            </div>
                                            <div class="form-group mb-2">
                                                <label for="guest_email" class="form-label">Email</label>
                                                <input type="email" id="guest_email" name="guest_email" class="form-control form-control-sm" placeholder="email@example.com">
                                            </div>
                                            <div class="form-group mb-2">
                                                <label for="guest_address" class="form-label">Shipping Address</label>
                                                <input type="text" id="guest_address" name="guest_address" class="form-control form-control-sm" placeholder="123 Main St">
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Delivery method -->
                        <div class="card shadow mb-3">
                            <div class="card-header">
                                <h5 class="fw-bold">Delivery Method</h5>
                            </div>
                            <div class="card-body">
                                <!-- Show the carriers -->
                                {{ form_row(deliveryForm.carriers) }} <!-- Render the carriers -->
                            </div>
                        </div>

                        <!-- End of the form -->
                        {{ form_end(deliveryForm) }}

                        <!-- Order summary -->
                        <div class="card shadow mb-3">
                            <div class="card-header">
                                <h5 class="fw-bold">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group">
                                    {% for product in cart %}
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-start flex-column">
                                                <div class="mb-2">
                                                    <img src="/uploads/products/{{ product.object.picture }}" alt="{{ product.object.name }}" class="img-fluid" style="max-width: 50px; max-height: 50px;">
                                                </div>
                                                <h6 class="fw-bold mb-1">{{ product.object.name }}</h6>
                                                <small class="text-muted">Quantité : {{ product.quantity }}</small>
                                            </div>
                                            <div class="text-end">
                                                <span class="fw-bold">{{ product.object.priceWt|price }}</span>
                                                <small class="text-muted d-block">Total : {{ (product.object.priceWt * product.quantity)|price }}</small>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>

                        <!-- Récapitulatif du total -->
                        <div class="card shadow mb-3">
                            <div class="card-header">
                                <h5 class="fw-bold">Payment Details</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    <li class="d-flex justify-content-between mb-2">
                                        <span>Subtotal</span>
                                        <span>subtotal</span>
                                    </li>
                                    <li class="d-flex justify-content-between mb-2">
                                        <span>Shipping</span>
                                        <span id="shippingCost">To be determined</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <strong>Total</strong>
                                        <strong>Total Price</strong>
                                    </li>
                                </ul>
                                <button type="submit" class="btn btn-primary w-100">Place Order</button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Colonne de droite pour les informations supplémentaires -->
                <div class="col-lg-4 d-flex flex-column">
                    <div class="card shadow mb-3">
                        <div class="card-header">
                            <h5 class="fw-bold">Need Help?</h5>
                        </div>
                        <div class="card-body">
                            <p>For any issues, contact our customer support at:</p>
                            <p><strong>Email:</strong> support@example.com</p>
                            <p><strong>Phone:</strong> +1 (800) 123-4567</p>
                            <a href="#" class="btn btn-outline-primary">Contact Support</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
